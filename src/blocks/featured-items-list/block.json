{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "featured-item-blocks/featured-items-list",
  "title": "Featured Items List",
  "description": "Display a list of featured items.",
  "category": "widgets",
  "icon": "star-empty",
  "supports": {
    "align": ["full", "wide"]
  },
  "attributes": {
    "align": {
      "type": "string",
      "default": "full"
    },
    "count": {
      "type": "number",
      "default": 4
    },
    "editMode": {
      "type": "boolean",
      "default": false
    },
    "postsPerCategory": {
      "type": "number",
      "default": 3
    }
  },
  "textdomain": "featured-item-blocks",
  "editorScript": "file:./index.js",
  "style": "file:./style.scss",
  "render": "file:./render.php"
}
